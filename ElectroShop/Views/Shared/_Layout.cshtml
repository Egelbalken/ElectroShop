<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectroShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" src="/images/electroshop5.png">
    <!-- Create a smal image in the website tab-->
    <link rel="icon" type="image/png" href="/images/electroshop5.png" sizes="42x42">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/ratings.css" />
</head>
<body>
    <header class="">
        <div class="" style="background-color:#FF1B1C; margin:auto; width:auto; height:40px; padding-top:2px;">
            <h3 class="" style="text-align:center; text-shadow:2px 2px 5px #262626; font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; font-size:25px; margin-left:30px;"><span style="color:#ACBFA4;">Electro</span><span style="color:#3f48cc;">Shop</span><span style="color:white;"> AB</span><img style="width:30px; margin-left:3px;" src="/images/electroshop5.png" /></h3>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow justify-content-center">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="/images/electroshop5.png" alt="Noimage"></a>
            <div class="container">
                <button class="navbar-toggler text-center" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ProductModels" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CategoryModels" asp-action="Index">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        <li>
                            <!-- Invoke the chopping cart viewComponent -->
                            <a style="position:initial; margin-left:10px; margin-top:-5px;" class="text-center" asp-action="Index" asp-controller="ShoppingCart"><img class="cartImage" src="/images/cart.png" />@await Component.InvokeAsync("ShoppingCartSummary")</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="" id="covid">
        <a>
            Covid-19 information: Do not go out, but do it.
        </a>
    </div>
    <div class="container">
        <div id="search" class="center">
            <form asp-controller="Browse" asp-action="search" method="post" class="form-inline my-2 my-lg-0">
                <input class="shadow form-control mr-lg-2" type="search" placeholder="Product Search..." aria-label="Search">
                <button class="shadow btn btn-primary" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ElectroShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> - @DateTime.Now
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ratings.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
